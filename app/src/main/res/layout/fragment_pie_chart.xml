<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrain_layout1"
        app:layout_constraintVertical_bias="0.000"
        >

        <TextView
            android:id="@+id/despesa_pagas_deste_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="Despesa Pagas Deste Mês: R$ 6.100,49"
            android:layout_marginLeft="6dp"
            />

        <TextView
            android:id="@+id/receita_recebidas_deste_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="Receita Recebidas Deste Mês: R$ 5.100,49"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/falta_pagar_deste_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="Líquido Deste Mês Considerando Pagos e Recebidos:"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/liquido_acumulado_considerando_pago_e_recebidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="Líquido Acumulado Considerando Pagos e Recebidos:"
            android:layout_marginLeft="6dp" />

    </LinearLayout>


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

</LinearLayout>
