<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MinhasCategorias">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMinhasCategorias1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/add_button_minhas_categorias1"
        android:contentDescription="@string/translate_lista_de_categorias"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button_minhas_categorias1"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginBottom="44dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_add"
        android:contentDescription="@string/translate_adicionar_item"/>


</androidx.constraintlayout.widget.ConstraintLayout>