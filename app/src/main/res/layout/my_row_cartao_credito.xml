<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayoutCartaoCredito"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/book_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="1sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.507" />

            <TextView
                android:id="@+id/book_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nome Do Cartão"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/book_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data de Vencimento Fatura"
                android:textSize="10sp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/book_title_txt"
                app:layout_constraintTop_toBottomOf="@+id/book_title_txt" />


            <TextView
                android:id="@+id/moeda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo Total R$: "
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/prices_txt"
                app:layout_constraintEnd_toStartOf="@+id/prices_txt"
                app:layout_constraintTop_toTopOf="@+id/prices_txt" />

            <TextView
                android:id="@+id/prices_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="120"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.213" />

            <TextView
                android:id="@+id/moeda2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo utilizado R$: "
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/prices_txt2"
                app:layout_constraintEnd_toStartOf="@+id/prices_txt2"
                app:layout_constraintTop_toBottomOf="@+id/prices_txt" />

            <TextView
                android:id="@+id/prices_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/prices_txt"
                app:layout_constraintTop_toBottomOf="@+id/prices_txt" />

            <TextView
                android:id="@+id/moeda3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo Disponível R$: "
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/prices_txt3"
                app:layout_constraintEnd_toStartOf="@+id/prices_txt3"
                app:layout_constraintTop_toBottomOf="@+id/prices_txt2" />

            <TextView
                android:id="@+id/prices_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/prices_txt2"
                app:layout_constraintTop_toBottomOf="@+id/prices_txt2" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

